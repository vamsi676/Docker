pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }
    stages {
        stage('Build') {
            steps {
                bat 'docker build -t darinpope/dp-alpine:latest .'
            }
        }
        stage('Login') {
            steps {
                script {
                    def dockerhubUser = env.DOCKERHUB_CREDENTIALS_USR
                    def dockerhubPass = env.DOCKERHUB_CREDENTIALS_PSW
                    bat """
                    echo ${dockerhubPass} | docker login -u ${dockerhubUser} --password-stdin
                    """
                }
            }
        }
        stage('Push') {
            steps {
                bat 'docker push darinpope/dp-alpine:latest'
            }
        }
    }
    post {
        always {
            bat 'docker logout'
        }
    }
}
