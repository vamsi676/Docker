pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/vamsi676/Docker'
            }
        }
        stage('Build') {
            steps {
                bat 'docker build -t surya8899/dp-alpine:latest .'
            }
        }
        stage('Login') {
            steps {
                script {
                    def dockerhubUser = env.DOCKERHUB_CREDENTIALS_USR
                    def dockerhubPass = env.DOCKERHUB_CREDENTIALS_PSW
                    bat """
                    echo ${dockerhubPass} | docker login -u ${dockerhubUser} --password-stdin
                    """
                }
            }
        }
        stage('Push') {
            steps {
                bat 'docker push surya8899/dp-alpine:latest'
            }
        }
    }
    post {
        always {
            bat 'docker logout'
        }
    }
}
