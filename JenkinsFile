pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('surya-dockerhub')
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/vamsi676/Docker'
            }
        }
        stage('Build') {
            steps {
                bat 'docker build -t surya8899/dp-alpine:latest .'
            }
        }
        stage('Login') {
            steps {
                script {
                    bat 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                }
            }
        }
        stage('Push') {
            steps {
                bat 'docker push surya8899/dp-alpine:latest'
            }
        }
    }
    post {
        always {
            bat 'docker logout'
        }
    }
}
